#!/bin/bash

# Configurable
TERMINAL="kitty"
BROWSER="brave"
TMUX_SESSION="Golang"

# URLs
PERSONAL_URLS=(
  "https://github.com/binoymanoj"
  # "https://www.boot.dev/dashboard"
)

# === Workspace 2 — Brave with personal profile ===
hyprctl dispatch workspace 2
for url in "${PERSONAL_URLS[@]}"; do
  $BROWSER --profile-directory="Default" "$url" &
done

sleep 2

# === Workspace 1 — Terminal with tmux ===
hyprctl dispatch workspace 1

# Create tmux session if it doesn't exist
tmux has-session -t "$TMUX_SESSION" 2>/dev/null
if [ $? != 0 ]; then
  tmux new-session -d -s "$TMUX_SESSION"
fi

# Wait for terminal to be ready before restoring
sleep 2

# Launch terminal and attach tmux session
$TERMINAL -e tmux attach-session -t "$TMUX_SESSION" &

